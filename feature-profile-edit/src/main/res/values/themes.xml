<resources>

    <style name="ProfileEditButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAppearance">@style/ProfileEditTextStyle</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:backgroundTint">@color/purple_500</item>
        <item name="cornerRadius">@dimen/button_save_radius</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_save_height</item>
        <item name="android:layout_marginBottom">@dimen/button_save_margin_bottom</item>
        <item name="android:layout_marginStart">@dimen/button_save_margin_start</item>
        <item name="android:layout_marginTop">@dimen/button_save_margin_top</item>
        <item name="android:layout_marginEnd">@dimen/button_save_margin_end</item>
    </style>

    <style name="ProfileEditTextStyle" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/edit_text_size_text</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="profileEdittextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="errorEnabled">true</item>
        <item name="errorIconTint">@null</item>
        <item name="boxStrokeColor">@color/purple_light</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/edit_text_layout_height</item>
        <item name="android:layout_marginStart">@dimen/edit_text_layout_margin_start</item>
        <item name="android:layout_marginEnd">@dimen/edit_text_layout_marginEnd</item>
        <item name="endIconMode">custom</item>
    </style>

    <style name="profileEditeditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="profileEditPhoto">
        <item name="android:layout_width">@dimen/profile_photo_width_height</item>
        <item name="android:layout_height">@dimen/profile_photo_width_height</item>
        <item name="android:layout_gravity">center</item>
        <item name="cardCornerRadius">@dimen/profile_photo_radius</item>
    </style>

    <style name="errorTextInputLayout">
        <item name="android:textSize">@dimen/text_size_error_input_Layout</item>
    </style>

</resources>