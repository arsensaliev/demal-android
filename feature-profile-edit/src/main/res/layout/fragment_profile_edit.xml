<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/profile_bg_dark">


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/profile_edit_btn_backspace"
            style="@style/btn_backspace"
            android:contentDescription="@string/btn_backspace_description"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical|center_horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewEdit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/white"
            android:layout_marginStart="20dp"
            android:layout_marginTop="130dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="138dp"
            app:cardCornerRadius="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/profile_edit_name"
                    style="@style/profileEdittextInputLayout"
                    android:layout_marginTop="86dp"
                    android:hint="@string/profile_edit_name"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.textfield.TextInputEditText style="@style/profileEditeditText" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/profile_edit_surname"
                    style="@style/profileEdittextInputLayout"
                    android:hint="@string/profile_edit_surname"
                    app:layout_constraintTop_toBottomOf="@+id/profile_edit_name">

                    <com.google.android.material.textfield.TextInputEditText style="@style/profileEditeditText" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/profile_edit_сountry"
                    style="@style/profileEdittextInputLayout"
                    android:hint="@string/profile_edit_сountry"
                    app:layout_constraintTop_toBottomOf="@+id/profile_edit_surname">

                    <com.google.android.material.textfield.TextInputEditText style="@style/profileEditeditText" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/profile_edit_сity"
                    style="@style/profileEdittextInputLayout"
                    android:hint="@string/profile_edit_сity"

                    app:layout_constraintTop_toBottomOf="@+id/profile_edit_сountry">

                    <com.google.android.material.textfield.TextInputEditText style="@style/profileEditeditText" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/profile_edit_btn_send"
                    style="@style/ProfileEditBottom"
                    android:backgroundTint="#6550EE"
                    android:layout_width="319dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    app:cornerRadius="10dp"
                    android:text="Сохранить"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/profile_edit_сity" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            style="@style/profileEditPhoto"

            app:layout_constraintBottom_toTopOf="@+id/cardViewEdit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/cardViewEdit">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ex_profile_avatar">

            </LinearLayout>

            <ImageView
                android:id="@+id/profile_edit_img_avatar"
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:alpha="0.5"
                android:contentDescription="@string/profile_avatar"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_camera" />


        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>