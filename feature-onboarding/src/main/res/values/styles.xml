<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextViewTitleStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/textSizeTextViewTitle</item>
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <style name="TextViewBodyStyle">
        <item name="android:textColor">"@color/white"</item>
        <item name="android:textSize">@dimen/textSizeTextViewBody</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/TextStyle</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/purple_light</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">@dimen/cornerRadius</item>
    </style>

    <style name="TextStyle" parent="@android:style/TextAppearance">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>
</resources>