<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Demal" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black_transparent</item>
        <!-- Customize your theme here. -->
        <item name="chipStyle">@style/ToursChip</item>
    </style>

    <style name="ProfileBottomSheetTextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingEnd">50dp</item>
        <item name="android:paddingStart">50dp</item>
        <item name="android:gravity">start|center</item>
        <item name="android:drawableEnd">@drawable/ic_arrow_rigth</item>
        <item name="android:drawablePadding">20dp</item>
    </style>

    <style name="squircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="ItemMainTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/black_dark</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <style name="ItemDescriptionTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/gray_dark</item>
        <item name="android:textSize">10sp</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="ToursChip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="android:textSize">12sp</item>
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipStrokeColor">@color/chip_stroke_color</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="ItemSupportTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/purple_light</item>
        <item name="android:textSize">10sp</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="HeaderTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/black_dark</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

</resources>